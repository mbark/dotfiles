[colors]
background_alt = #00000000
background = #282A36
foreground = #F8F8F2
black = #000000
white = #BFBFBF
transparent = #00ffffff
red = #FF5555
green = #50FA7B
blue = #CAA9FA
purple = #FF79C6
orange = #8BE9FD
yellow = #F1FA8C

[bar/master]
monitor=eDP1
width = 100%
height = 35
separator = " "
background = ${colors.transparent}
foreground = ${colors.foreground}
underline-size = 2
overline-size = 3
font-0 = Hack:size=6
font-1 = FontAwesome:size=6

[bar/top]
inherit = bar/master
modules-left = workspaces
modules-center = music
modules-right = cpu ram updates volume wifi battery time

[module/network]
type = internal/network
interface = wlp3s0
ping-interval = 3

format-connected-padding = 1
label-connected-padding-left = 1

accumulate-stats = true

[module/updates]
type = custom/script
exec = pkgupdates.sh
interval = 300
click-left = urxvt -e sudo pacman -Syu &
padding=1

[module/volume]
type = custom/script
exec = volume.sh
interval = 0.1
click-left = pamixer -t
click-right = pavucontrol &
scroll-up = pamixer -i 5
scroll-down = pamixer -d 5

[module/wifi]
inherit = module/network

format-connected-foreground = ${colors.green}
format-connected-underline = ${colors.green}

label-connected = %{A:urxvt -e sudo wifi-menu &:}%{A}
label-connected-padding-left = 0

format-disconnected-padding = 1
format-disconnected-underline = ${colors.yellow}
format-disconnected-foreground = ${colors.yellow}

label-disconnected = %{A:urxvt -e sudo wifi-menu &:}%{A}

[bar/bottom]
inherit = bar/master

bottom = true

modules-left = cpu ram battery
modules-center =
modules-right = time

[module/cpu]
type = internal/cpu
interval = 5

format-prefix = 
format-prefix-foreground = ${colors.green}
format-underline = ${colors.green}
format-padding = 1

label = %{A:urxvt -e htop &:}%percentage:2%%%{A}
label-padding-left = 1

[module/ram]
type = internal/memory
interval = 3

format-prefix = 
format-prefix-foreground = ${colors.blue}
format-underline = ${colors.blue}
format-padding = 1

label = %{A:urxvt -e htop &:}%percentage_used:2%%%{A}
label-padding-left = 1

[module/battery]
type = internal/battery
full-at = 98
battery = BAT0
adapter = ADP1

time-format = %H:%M
format-charging = <animation-charging> <label-charging>
format-charging-padding = 1
format-charging-underline = ${colors.green}
format-charging-foreground = ${colors.green}

format-discharging = <ramp-capacity> <label-discharging>
format-full-underline = ${colors.green}
format-full-padding = 1

label-charging = %{F#31a354}%percentage:2%%%{F-} %time%
label-discharging = %percentage:2%% %time% %{u- -u}
label-full = %{F#50FA7B}%{F-} %percentage%% %{F#F1FA8C}%{F-}

ramp-capacity-0 = %{F#FF5555 u#FF5555 +u} %{F-}
ramp-capacity-1 = %{F#FF5555 u#FF5555 +u} %{F-}
ramp-capacity-2 = %{F#F1FA8C u#F1FA8C +u} %{F-}
ramp-capacity-3 = %{F#F1FA8C u#F1FA8C +u} %{F-}
ramp-capacity-4 = %{F#50FA7B u#50FA7B +u} %{F-}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

[module/workspaces]
type = internal/i3
enable-click = true
enable-scroll = false
strip-wsnumbers = true
label-mode-padding = 1

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 9;
ws-icon-3 = 10;

ws-icon-default = 

label-focused-underline = ${colors.blue}
label-focused-padding = 1

label-unfocused-padding = 1

label-visible-padding = 1

label-urgent-padding = 1
label-urgent-underline = ${colors.red}

[module/time]
type = internal/date
interval = 60

format-padding = 1
format-prefix = 
format-prefix-foreground = ${colors.purple}
format-underline = ${colors.purple}

date = "%H:%M"
time-alt = "%H:%M:%S"
label-padding-left = 1

[module/music]
type = internal/mpd

host = 127.0.0.1
port = 6600

interval = 1

format-online = <label-song> <label-time>

label-song = %{F#50FA7B} %title%%{F-} from %album% by %artist%
label-time = %elapsed% / %total%

icon-play = ⏵
icon-pause = ⏸
icon-stop = ⏹
icon-prev = ⏮
icon-next = ⏭

bar-progress-width = 45
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─
