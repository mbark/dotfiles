[colors]
background_alt = #00000000
background = #282A36
foreground = #F8F8F2
black = #000000
white = #BFBFBF
transparent = #20000000
red = #FF5555
green = #50FA7B
blue = #CAA9FA
purple = #FF79C6
orange = #8BE9FD
yellow = #F1FA8C

[bar/master]
monitor=eDP1
width = 100%
height = 40
separator = " "
background = ${colors.transparent}
foreground = ${colors.foreground}
underline-size = 0
overline-size = 0
font-0 = "InputMono:weight=light:size=12"

[bar/top]
inherit = bar/master

modules-left = music
modules-right = volume time date

[bar/bottom]
inherit = bar/master
bottom = true

modules-left = workspaces
modules-right = cpu ram wifi battery

[module/volume]
type = internal/volume

format-volume = the volume is <label-volume>
label-volume = %{B#FF79C6} %percentage%% %{B-}
format-muted = sound is %{B#FF79C6} muted %{B-}
click-left = pamixer -t
click-right = pavucontrol &
scroll-up = pamixer -i 5
scroll-down = pamixer -d 5

[module/network]
type = internal/network
interface = wlp3s0
ping-interval = 3

format-connected-padding = 1
label-connected-padding-left = 1

accumulate-stats = true

[module/wifi]
inherit = module/network
format-connected = connected to wifi <label-connected>

label-connected = %{B#FF79C6} %essid% %{B-}
label-disconnected = %{B#FF5555} dsconnected %{B-}

[module/cpu]
type = internal/cpu
interval = 5

format = cpu usage is at <label>
label = %{B#FF79C6} %percentage:2%% %{B-}

[module/ram]
type = internal/memory
interval = 3

format = and ram usage is at <label>
label = %{B#FF79C6} %percentage_used:2%% %{B-}

[module/battery]
type = internal/battery
full-at = 98
battery = BAT0
adapter = ADP1

time-format = %H:%M
format-charging = battery is at <label-charging> and increasing
label-charging = %{B#FF79C6} %percentage:2%% %{B-}

format-discharging = battery is at <label-discharging> and decreasing
label-discharging = %{B#FF79C6} %percentage:2%% %{B-}

format-full = battery is full

[module/workspaces]
type = internal/i3
enable-click = true
enable-scroll = false
strip-wsnumbers = true
label-mode-padding = 1

ws-icon-0 = 1;I
ws-icon-1 = 2;II
ws-icon-2 = 3;III
ws-icon-3 = 4;IV
ws-icon-4 = 5;V
ws-icon-5 = 6;VI
ws-icon-6 = 7;VII
ws-icon-7 = 8;VIII
ws-icon-8 = 9;IX
ws-icon-9 = 10;X

label-focused-background = ${colors.purple}
label-focused-padding = 1
label-focused = %icon%
label-focused-font = 1

label-unfocused-padding = 1
label-unfocused = %icon%
label-unfocused-font = 2

label-visible-padding = 1
label-urgent-padding = 1

[module/time]
type = internal/date
interval = 30

date = "%H:%M"

format = and it is <label>
label = %{B#FF79C6} %date% %{B-}

[module/date]
type = internal/date
date = the %{B#FF79C6} %Y-%m-%d %{F-}

[module/music]
type = internal/mpd

host = 127.0.0.1
port = 6600

interval = 1

format-online = <label-song> <bar-progress> <label-time>
format-offline = nothing playing

label-song = %{B#FF79C6} %title% %{B-} by %artist%
label-time = %elapsed% / %total%

bar-progress-width = 45
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─
